<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.axstudio.axparty.guessword"
    android:installLocation="auto"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="18" />

    <application
        android:name="net.axstudio.axparty.guessword.GuessWordApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.axstudio.axparty.guessword.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="net.axstudio.axparty.guessword.GameSettingsActivity"
            android:label="@string/title_activity_game_settings" >
        </activity>
        <activity
            android:name="net.axstudio.axparty.guessword.GameActivity"
            android:label="@string/title_activity_game" >
        </activity>
        <activity
            android:name="net.axstudio.axparty.guessword.StartGameActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
